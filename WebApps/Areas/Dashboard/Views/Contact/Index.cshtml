@model IEnumerable<Contact>
<!-- Content Header (Page header) -->
<div class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1 class="m-0">Dashboard</h1>
            </div><!-- /.col -->
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="/">Home</a></li>
                    <li class="breadcrumb-item"><a href="/dashboard">Dashboard</a></li>
                    <li class="breadcrumb-item active">Contact</li>
                </ol>
            </div><!-- /.col -->
        </div><!-- /.row -->
    </div><!-- /.container-fluid -->
</div>
<!-- /.content-header -->
<!-- Main content -->
<section class="content">
    <div class="container-fluid">
        <table class="table table-bordered">
            <thread class="table-dark">
                <tr>
                    <th>Name</th>
                    <th>Email</th>
                    <th>Subject</th>
                    <th>Message</th>
                    <th>Detail</th>
                </tr>
            </thread>
            <tbody>
                @foreach (var item in Model)
                {
                <tr>
                    <td>@item.Name</td>
                    <td>@item.Email</td>
                        <td>@Html.Raw(item.IsNew ? "<span class=\"right badge badge-danger\">New</span>" : "")</td>
                    <td>@item.Subject</td>
                    <td>@item.Message</td>
                    <td>
                        <a href="/dashboard/contact/details/@item.ContactId">
                                <i class="fas fa-info-circle"></i>
                        </a>
                    </td>
                </tr>
                }
            </tbody>
        </table>
    </div><!-- /.container-fluid -->
</section>